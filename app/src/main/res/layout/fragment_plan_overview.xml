<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="409dp"
        android:layout_height="670dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Monday"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@color/colorSelected"/>
            <TextView
                android:id="@+id/mondayTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tuesday"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@color/colorSelected"/>
            <TextView
                android:id="@+id/tuesdayTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Wednesday"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@color/colorSelected"/>
            <TextView
                android:id="@+id/wednesdayTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thursday"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@color/colorSelected"/>
            <TextView
                android:id="@+id/thursdayTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Friday"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@color/colorSelected"/>
            <TextView
                android:id="@+id/fridayTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Saturday"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@color/colorSelected"/>
            <TextView
                android:id="@+id/saturdayTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sunday"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@color/colorSelected"/>
            <TextView
                android:id="@+id/sundayTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/planET"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/edittext_box"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter email"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="0.384" />

    <Button
        android:id="@+id/sendPlanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Plan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toEndOf="@+id/planET"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>